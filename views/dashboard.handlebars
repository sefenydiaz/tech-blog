<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blogpost:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blogpost-title">Title:</label>
        <input class="form-input col-md-8" type="text" id="blogpost-title" name="blogpost-title" />
      </div>
      
      <div class="form-group">
        <label for="content">Content:</label>
        <textarea class="form-input col-md-8" id="content" name="content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
{{log blogposts}}
  {{#if blogposts.length}}
  <div class="col-md-6 project-list">
    <h3>Your Blogposts:</h3>

    {{#each blogposts as |blogpost|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/dashboard/{{blogpost.id}}">{{blogpost.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blogpost.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>
<script src="./js/createblog.js"></script>
